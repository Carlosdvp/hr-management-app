{
  "compilerOptions": {
    "target": "es2016",                                  
    "lib": ["ES6"],
    "module": "commonjs",
    "rootDir": "src",
    "allowJs": true,
    "outDir": "build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*.ts", 
    "src/tests/**/*.ts", 
    ".env"
  ],
  "exclude": ["node_modules"]
}
