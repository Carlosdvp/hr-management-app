{
  "name": "hr-management-app",
  "version": "1.0.0",
  "description": "fullstack",
  "main": "server/server.ts",
  "scripts": {
    "build": "tsc -p server/tsconfig.json",
    "db:seed": "npx ts-node server/src/seed.ts",
    "db:migrate": "cd server && npx prisma migrate dev --schema=./prisma/schema.prisma",
    "start:dev": "ts-node-dev --respawn --transpile-only --ignore-watch node_modules --exit-child server/src/server.ts",
    "start": "node server/build/server.js",
    "test": "jest --detectOpenHandles"
  },
  "author": "V",
  "license": "ISC",
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.5",
    "@types/node": "^20.4.0",
    "@types/supertest": "^2.0.13",
    "cors": "^2.8.5",
    "jest": "^29.7.0",
    "prisma": "^4.16.2",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "@prisma/client": "^5.3.1",
    "@types/bcrypt": "^5.0.0",
    "@types/dotenv": "^8.2.0",
    "bcrypt": "^5.1.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "prisma": "^5.3.1",
    "ts-node": "^10.9.1"
  },
  "prisma": {
    "schema": "./server/prisma/schema.prisma",
    "dotenv": {
      "path": "./server/.env"
    }
  }
}
